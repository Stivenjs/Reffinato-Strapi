{
  "kind": "collectionType",
  "collectionName": "cart_items",
  "info": {
    "singularName": "cart-item",
    "pluralName": "cart-items",
    "displayName": "Cart Item",
    "description": "Item in a user's shopping cart"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "quantity": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "size": {
      "type": "string",
      "required": true
    },
    "color": {
      "type": "string",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "productName": {
      "type": "string",
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "cartItems"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::auth.auth",
      "inversedBy": "cartItems"
    }
  }
}
